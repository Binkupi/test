<div class="modal fade" id="cancel-bill" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Hủy bỏ đơn hàng</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có muốn hủy bỏ đơn hàng?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="btn-cancel-bill">có</button>
        <button type="button"  class="btn btn-primary"data-dismiss="modal">không</button>
      </div>
    </div>
  </div>
</div>
<form method="put" id="form-cancel-bill"></form>
<script>
    
    //when diolog confirm clicks
    document.addEventListener("DOMContentLoaded",function(){
      
        var ma_bill;
        var cancelForm=document.getElementById('form-cancel-bill');
        var btnCancelBill=document.getElementById("btn-cancel-bill");

    $('#cancel-bill').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    ma_bill = button.data('id') // Extract info from data-* attributes
     console.log(ma_bill);

    })
   
    btnCancelBill.onclick=function(){
      cancelForm.action='/bills/'+ma_bill+"?_method=PUT";
      cancelForm.submit();
    }
    })
    
</script>